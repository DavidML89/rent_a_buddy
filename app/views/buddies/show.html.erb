<div class="buddy-search-app">
  <form class="location-text">
    <input class="location-text" type="text" placeholder="Location">
  </form>
  <div>
    <i class="search-icon fa fa-search" style="font-size:16px;color:white"></i>
  </div>
</div>
<div>
  <div class="d-flex justify-content-between">
    <div class="flex-item">
      <div class="profil-display">
        <h2><%= @buddy.name %></h2>
        <p>I'm <%= @buddy.age %> years old.</p>
        <p>I identify myself as <%= @buddy.gender %></p>
        <p>I'm leaving in <%= @buddy.city %></p>
        <p>A bit about myself: </p>
        <p><%= @buddy.biography %></p>
        <p>I enjoy the <%= @buddy.hobby %></p>
      </div>
    </div>
    <div class="flex-item">
      <%# add picture %>
      <%# redirect to for the next step %>
      <button type="button" class="btn btn-primary btn-lg"><%= link_to "Book this buddy", new_buddy_booking_path(@buddy)%></button>
    </div>
  </div>
</div>
