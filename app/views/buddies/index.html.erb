<div class="buddy-search-app">
  <form action="<%= buddies_path %>" class="location-text">
    <input name="search" class="location-text" type="text" placeholder="Location">
  </form>
  <div>
    <i class="search-icon fa fa-search" style="font-size:16px;color:white"></i>
  </div>
</div>

<div class="grid">
  <% @buddies.each do |buddy| %>
    <%= link_to buddy_path(buddy) do %>
      <div class="buddy-card">
        <div>
          <%= image_tag buddy.photo, class: 'card-img' %>
          <h5 class="price">â‚¬<%= buddy.price_hour %></h5>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= buddy.name %></h5>
          <p class="card-text"><%= buddy.hobby %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
