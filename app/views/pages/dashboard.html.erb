
<h1>Welcome <%= current_user.username %>!</h1>
<h4> These are your bookings:</h4>
<div class="bookings">
  <% @bookings.reverse_each do |booking| %>
    <div class="confirmation-container">
      <div class="confirmation-photo"><%= image_tag booking.buddy.photo, class: "image" %></div>
      <div class="confirmation-buddy"><%= booking.buddy.name %></div>
      <div class="confirmation-date">
        <p><%= booking.starts_at.strftime("%B %d %Y, %l:%M %P")%></p>
        <p>-</p>
        <p><%= booking.ends_at.strftime("%B %d %Y, %l:%M %P")%></p>
      </div>
      <div class="message-scroll">
        <div class="confirmation-message"><%= booking.request_message%></div>
      </div>
      <div class="confirmation-action"><%= link_to ('<i class="fa fa-trash fa-lg"></i>').html_safe, booking_path(booking), method: :delete, class: "btn btn-cancel", data: { confirm: "Are you sure you want to delete this booking?" } %></div>
    </div>
  <% end %>
</div>
<div id="footer">
  <div class="footer-content">
    <div class="info">
      <p>Contact us</p>
      <p>About</p>
    </div>
    <div class="social-media">
      <i class="fab fa-facebook-f"></i>
      <i class="fab fa-twitter"></i>
      <i class="fab fa-instagram"></i>
      <i class="fab fa-linkedin-in"></i>
      <i class="fab fa-youtube"></i>
      <i class="fab fa-github"></i>
    </div>
  </div>
</div>
