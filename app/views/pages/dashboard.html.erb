<h1>Welcome <%= current_user.username %>!</h1>
<h4> These are your bookings:</h4>
<% @bookings.each do |booking| %>
  <div class="confirmation-container">
    <div class="confirmation-buddy"><%= booking.buddy.name %></div>
    <div class="confirmation-date"><%= booking.date%></div>
    <div class="message-scroll">
      <div class="confirmation-message"><%= booking.request_message%></div>
    </div>
    <div class="confirmation-action"><%= link_to "cancel", booking_path(booking), method: :delete, class: "btn btn-cancel", data: { confirm: "Are you sure you want to delete this booking?" } %></div>
